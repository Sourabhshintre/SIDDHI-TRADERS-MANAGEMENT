<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".basins">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="WELCOME TO BASINS SECTION"
            android:textColor="#D82148"
            android:textSize="23dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/t1"
            android:layout_marginTop="5dp"
            android:background="@drawable/basinlogo" />
        <ViewFlipper
            android:id="@+id/vflip1"
            android:layout_below="@+id/im1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:flipInterval="2000"
            android:autoStart="true"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/washbasinflipper1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/washbasinflipper2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/washbasinflipper4"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/washbasinflipper3"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/washbasinflipper5"/>
        </ViewFlipper>

        <ImageButton

            android:id="@+id/b1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/vflip1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/counterwb"
            android:onClick="submit" />

        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Counter Wash Basin"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/b2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/vflip1"
            android:layout_marginStart="200dp"
            android:layout_marginTop="50dp"
            android:onClick="submit1"
            android:src="@drawable/freestandingwb" />

        <TextView
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b2"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:text="Free Standing Basins"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/b3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/b1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:onClick="submit3"
            android:src="@drawable/ceramicwb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b3"
            android:layout_marginStart="30dp"
            android:text="Ceramic Basins"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/b4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/b2"
            android:layout_marginStart="200dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/regularwb"
            android:onClick="submit4" />

        <TextView
            android:id="@+id/t9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b4"
            android:layout_marginStart="220dp"
            android:layout_marginTop="5dp"
            android:text="Regular Wash basins"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="italic" />
    </RelativeLayout>
</ScrollView>